@model BR.EzTravel.Web.Models.Admin.AdminPackageIndexViewModel
@{
    ViewBag.Title = "Manage Holiday List";
    Layout = "~/Areas/CN/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xs-12 col-sm-9">
    <p class="pull-right visible-xs">
        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
    </p>

    <div class="row">
        <div class="col-md-12" role="main">
            <h1>@ViewBag.Title</h1>
            <p>
                <button type="button" class="btn btn-default">发布</button>
                <button type="button" class="btn btn-default">还原为草稿</button>
                <button type="button" class="btn btn-default">删除</button>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-md-1">
                            <input type="checkbox" id="chkAll">
                        </th>
                        <th class="col-md-7">标题</th>
                        <th class="col-md-3">最后更新</th>
                        <th class="col-md-2">状态</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Packages)
                    {
                        <tr>
                            <th scope="row">
                                <input type="checkbox" id="chk_@(item.ID)" value="@item.ID">
                            </th>
                            <td>
                                @Html.ActionLink(item.Title, "Edit", new { id = item.ID, @area = "CN" })
                            </td>
                            <td>@item.LastUpdateDT.ToString("dd MMM yyyy")</td>
                            <td>@(item.Active ? "活跃" : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/row-->
</div><!--/.col-xs-12.col-sm-9-->
